<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="BaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="loading_progress_small" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/base_progress_round_small</item>
        <item name="android:minWidth">39dp</item>
        <item name="android:maxWidth">39dp</item>
        <item name="android:minHeight">39dp</item>
        <item name="android:maxHeight">39dp</item>
    </style>

    <style name="loading_progress_large" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@anim/base_progress_round_large</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:maxWidth">70dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:maxHeight">70dp</item>
    </style>

    <style name="pop_preview">
        <item name="android:windowEnterAnimation">@anim/base_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/base_zoom_out</item>
    </style>

    <color name="toast_text">#FFFFFF</color>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

     <!-- 圆角图片 -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width_1" format="dimension" />
        <attr name="border_color_1" format="color" />
        <attr name="mutate_background" format="boolean" />
        <attr name="oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>
    
    
    <!-- 描述数字键盘按下 -->
    <string name="numeric_keyboard_down">numeric keyboard down</string>
	<!-- 描述数字键盘弹起 -->
	<string name="numeric_keyboard_up">numeric keyboard up</string>
	<!-- 描述数字键盘取消 -->
	<string name="numeric_keyboard_cancel">numeric keyboard cancel</string>
	<style name="number_text_style">
        <item name="android:background">@drawable/number_button_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:gravity">center</item>
    </style>
</resources>